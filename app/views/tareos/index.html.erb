<div class="row">
    <div class="span2">
        <h2>Tareos</h2>
    </div>
    <div class="span4">
        <br> 
        <%= link_to raw("<i class='icon-plus icon-white'></i> Nuevo T.Semanal"), '/tareos/tareo_semanal', :class => 'btn btn-primary pull-right' %> 
        
    </div>
</div>
<br>

<div class="row">
  <table class="table table-striped table-bordered table-condensed span6">
    <tr>    
      <th>Inicio</th>
      <th>Fin</th>
      <th>Acciones</th>
    </tr>
  <% @tareos.each do |tareo| %>
    <tr>
      <td><%= l(tareo.inicio, format: :fecha) %></td>
      <td><%= l(tareo.fin, format: :fecha) %></td>      
      <td>
        <%= link_to raw('<i class="icon-eye-open icon-white"></i> Ver'), tareo, class: 'btn btn-mini btn-info' %>
        <% if tareo.aprobado.blank? %>
          <%= link_to raw('<i class="icon-ok icon-white"></i> aprobar'), "/tareos/aprobar?id=#{tareo.id}", class: 'btn btn-mini btn-success' %>
        <% elsif tareo.aprobado == 1 %>
          <%= link_to raw('<i class="icon-ok icon-white"></i> Desaprobar'), "/tareos/desaprobar?id=#{tareo.id}", class: 'btn btn-mini btn-iverse' %>
        <% end %>
        <%= link_to raw('<i class="icon-trash icon-white"></i> Del'), tareo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %>
      </td>
    </tr>
  <% end %>
  </table>
</div>

<div class="clearfix"></div>