<div class="page-header">
  <h2 class="text-left">Parte Diario de Personal <small><%= l(@partediariodepersonal.fecha, format: :fecha) %></small></h2>    
</div>


<p id="notice"><%= notice %></p>

<div class="row">
<table class="table table-striped table-bordered table-condensed table-hover span12">

  <tr>
    <td><b>Numero de Parte</b></td>
    <td><%= @partediariodepersonal.numero %></td>
    <td><b>WBS Nivel 1</b></td>
    <td><%= @partediariodepersonal.gruposdetrabajo.sectore.descripcion %></td>
  </tr>
  <tr>
    <td><b>WBS Nivel 2</b></td>
    <td><%= @partediariodepersonal.gruposdetrabajo.subsectore.descripcion %></td>
    <td><b>Jefe de Frente</b></td>
    <td>
      <%= @partediariodepersonal.gruposdetrabajo.jefedefrente.ente.nombre %>
      <%= @partediariodepersonal.gruposdetrabajo.jefedefrente.ente.apellido %>
      <%= @partediariodepersonal.gruposdetrabajo.jefedefrente.ente.razon_social %>
    </td>
  </tr>
  <tr>
    <td><b>Subcontratista</b></td>
    <td>
      <%= @partediariodepersonal.gruposdetrabajo.subcontrato.proveedore.ente.nombre %>
      <%= @partediariodepersonal.gruposdetrabajo.subcontrato.proveedore.ente.apellido %>
      <%= @partediariodepersonal.gruposdetrabajo.subcontrato.proveedore.ente.razon_social %>
    </td>
    <td><b>Maestro de Obra</b></td>
    <td>
      <%= @partediariodepersonal.gruposdetrabajo.maestrodeobra.ente.nombre %>
      <%= @partediariodepersonal.gruposdetrabajo.maestrodeobra.ente.apellido %>
      <%= @partediariodepersonal.gruposdetrabajo.maestrodeobra.ente.razon_social %>
    </td>
  </tr>
</table>
</div>

<legend>Registros</legend>
<br>
<table class="table table-striped table-bordered table-condensed">
  <tr>    
    <th>Frente</th>
    <th>D.N.I</th>
    <th>Apellidos y Nombres</th>
    <th>Categoria</th>
    <th>Partida de Control</th>
    <th>Normal</th>
    <th>60%</th>
    <th>100%</th>
    <th>Total Horas</th>
  </tr>
  <% @partediariodepersonal.trabajadores.each do |trabajadore| %>
  <tr style="font-size:11px;">
    <td><%= trabajadore.frente.nombre %></td>
    <td><%= trabajadore.catalogodetrabajadore.ente.dni %></td>
    <td>      
      <%= trabajadore.catalogodetrabajadore.ente.nombre %> 
      <%= trabajadore.catalogodetrabajadore.ente.apellido %>
      <%= trabajadore.catalogodetrabajadore.ente.razon_social %>
    </td>
    <td><%= trabajadore.catalogodetrabajadore.catalogocategoriatrabajadore.nombre %></td>
    <td><%= trabajadore.partidasdecontrol.subfase.descripcion[0,45] %></td>
    <td><%= trabajadore.normal %></td>
    <td><%= trabajadore.normal_60 %></td>
    <td><%= trabajadore.normal_100 %></td>
    <td><%= trabajadore.total_horas %></td>
  </tr>
  <% end %>
</table>

<div class="form-actions">  
  <%= link_to raw('<i class="icon-arrow-left icon-white"></i> Regresar'), partediariodepersonals_path, :class => "btn btn-primary" %>  
  <%= link_to raw('Nuevo <i class="icon-plus icon-white"></i>'), new_partediariodepersonal_path, :class => "btn btn-primary" %>
</div>

