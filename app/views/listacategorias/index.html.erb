<div class="row">
  <div class="span5">
    <h2>Categorias Preciario</h2>  
  </div>
  <div class="span3">
    <br>
    <%= link_to raw('Nuevo <i class="icon-plus icon-white"></i> '), new_listacategoria_path, :class => "btn btn-primary pull-right" %>
  </div>
</div>
<br>
<div class="row">
<table class="table table-bordered table-striped table-condensed span8">
  <tr>
    <th>#id</th>
    <th>Codigo</th>
    <th>Nombre</th>    
    <th>Acciones</th>
  </tr>

<% @listacategorias.each do |listacategoria| %>
  <tr style="font-size:12px;">
    <td><%= listacategoria.id %></td>
    <td><%= listacategoria.codigo %></td>    
    <td><%= listacategoria.nombre %></td>    
    <td>
      <%= link_to raw('<i class="icon-eye-open icon-white"></i>'), listacategoria, :class => "btn btn-small btn-info" %>
      <%= link_to raw('<i class="icon-edit icon-white"></i>'), edit_listacategoria_path(listacategoria), :class => "btn btn-small btn-success" %>
      <%= link_to raw('<i class="icon-trash icon-white"></i>'), listacategoria, method: :delete, data: { confirm: 'Seguro que desea Eliminar?' }, :class => "btn btn-small btn-danger" %>
    </td>
  </tr>
<% end %>
</table>
</div>
<div class="clearfix"></div>