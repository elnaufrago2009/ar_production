<div class="row">
  <div class="span3">
    <h2>Unidades</h2>  
  </div>
  <div class="span2">
    <br>
    <%= link_to raw('Nuevo <i class="icon-plus icon-white"></i>'), new_unidade_path, :class => 'btn btn-primary pull-right' %>
  </div>
</div>
<br>

<div class="row">
  <table class="table table-striped table-bordered table-condensed table-hover span5">
    <tr>
      <th>#id</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Acciones</th>    
    </tr>

  <% @unidades.each do |unidade| %>
    <tr>
      <td><%= unidade.id %></td>
      <td><%= unidade.nombre %></td>
      <td><%= unidade.descripcion %></td>
      <td>
        <%= link_to raw('<i class="icon-eye-open icon-white"></i>'), unidade, :class => 'btn btn-small btn-info' %>
        <%= link_to raw('<i class="icon-edit icon-white"></i>'), edit_unidade_path(unidade), :class => 'btn btn-small btn-success' %>
        <%= link_to raw('<i class="icon-trash icon-white"></i>'), unidade, method: :delete, data: { confirm: 'Esta seguro que desea eliminar ?' }, :class => 'btn btn-small btn-danger' %>
      </td>
    </tr>
  <% end %>
  </table>  
</div>



<div class="form-actions">
  
</div>

