<div class="row">
  <div class="span6">
    <h2>SubFases</h2>
  </div>
  <div class="span6">
    <br>
    <%= link_to raw('Nuevo <i class="icon-plus icon-white"></i>'), new_subfase_path, :class => "btn btn-primary pull-right" %>
  </div>
</div>
<br>


<div class="row">
  <div class="span7">
    <!-- Paginacion-->
    <div class="pull-left">
      <%= will_paginate @subfases, renderer: BootstrapPagination::Rails %>  
    </div>    
    <!-- End Paginacion -->
  </div>
  <div class="span5">
    <!-- Search-->
    <%= form_tag "/subfases", :method => 'get', :class => "form-search pull-right" do %>
      <div class="input-append">    
        <%= text_field_tag :search, params[:search], :class => "span3 search-query", :placeholder => "Buscar subfases" %>
        <%= submit_tag 'Buscar', :class => "btn" %>
      </div>
    <% end %> 
    <!-- End Search -->    
  </div>
</div><!-- End Row -->

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>#id</th>
    <th>Cod Fase</th>
    <th>Cod Sufase</th>
    <th>Descripcion</th>
    <th>Fase</th>
    <th>Acciones</th>
  </tr>

<% @subfases.each do |subfase| %>
  <tr style="font-size:12px;">
    <td><%= subfase.id %></td>
    <td><%= subfase.fase.codigo %></td>
    <td><%= subfase.codigo %></td>
    <td><%= subfase.descripcion[0,30] %></td>
    <td><%= subfase.fase.descripcion[0,30] %></td>
    <td>
      <%= link_to raw('<i class="icon-eye-open icon-white"></i>'), subfase, :class => "btn btn-small btn-info" %>
      <%= link_to raw('<i class="icon-edit icon-white"></i>'), edit_subfase_path(subfase), :class => "btn btn-small btn-success" %>
      <%= link_to raw('<i class="icon-trash icon-white"></i>'), subfase, method: :delete, data: { confirm: 'Esta seguro que desea Eliminar?' }, :class => "btn btn-small btn-danger" %>
    </td>
  </tr>
<% end %>
</table>

<!-- Paginacion -->
<div class="pull-right">
  <%= will_paginate @subfases, renderer: BootstrapPagination::Rails %>  
</div>
<div class="clearfix"></div>
<!-- End Paginacion -->