<% if !notice.nil? %>

  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Importante!</strong> <%= notice %>.
  </div>    
<% end %>


<div class="row">
  <div class="span6">
    <h2>Insumos de Subcontrato</h2>
  </div>  
  <div class="span6">
    <br>
    <%= link_to raw('Nuevo <i class="icon-plus icon-white"></i>'), new_lista_path, :class => "btn btn-primary pull-right" %>
  </div>
</div>

<div class="row">
  <div class="span6">
    <div class="pull-left">
      <!-- will_paginate @listas, renderer: BootstrapPagination::Rails   -->
      
    </div>
  </div>
  <div class="span6">
    <!-- Search-->
    <%= form_tag "/listas", :method => 'get', :class => "form-search pull-right" do %>
      <div class="input-append">    
        <%= text_field_tag :search, params[:search], :class => "span3 search-query", :placeholder => "Buscar Partida" %>
        <%= submit_tag "Search", :class => "btn" %>
      </div>
    <% end %> 
    <!-- End Search -->    
  </div>
</div>




<table class="table table-bordered table-striped table-condensed table-hover">
  <tr>
    <th>#Id</th>
    <th>Codigo</th>
    <th>Nombre</th>
    <th>Unidad</th>
    <th>Precio</th>
    <th>Acciones</th>
  </tr>

<% @listas.each do |lista| %>
  <tr style="font-size:12px;">
    <td><%= lista.id %></td>
    <td><%= lista.codigo %></td>    
    <td><%= lista.nombre %></td>
    <td><%= lista.unidade.nombre %></td>
    <td><%= lista.precio_unitario %></td>    
    <td>
      <%= link_to raw('<i class="icon-eye-open icon-white"></i>'), lista, :class => "btn btn-small btn-info" %>
      <%= link_to raw('<i class="icon-edit icon-white"></i>'), edit_lista_path(lista), :class => "btn btn-small btn-success" %>
      <%= link_to raw('<i class="icon-trash icon-white"></i>'), lista, method: :delete, data: { confirm: 'Esta Seguro que desea Eliminar?' }, :class => "btn btn-small btn-danger" %>
    </td>
  </tr>
<% end %>
</table>

<div class="pull-right">
   <!-- will_paginate @listas, renderer: BootstrapPagination::Rails  -->
</div>

<div class="clearfix"></div>