
<div class="page-header">
	<h1 style="text-align: center;">Cuadro Resumen Partidas</h1>
</div>

<% if !@vpartidas.nil? %>
<div class="row">
  <table class="table table-condensed table-bordered table-hover span9" style="margin: 0 auto; float: none;">
  	<tr class="well">
  		<td colspan="6">
  			<h3 style="text-align: center;"><%= @subcontrato_nombre %></h3>
  		</td>
  	</tr>
    <tr class="well">
      <th>Codigo</th>
      <th>Partida</th>
      <th style="text-align: right;">Unidad</th>
      <th style="text-align: right;">Cantidad</th>
      <th style="text-align: right;">P.U.</th>
      <th style="text-align: right;">Parcial</th>
    </tr>
    <% sumariza_parcial = 0 %>
    <% @vpartidas.each do |partida| %>
      <tr style="font-size:12px;">
        <td><%= partida.codigo %></td>
        <td><%= partida.partida_nombre[0,60] %></td>
        <td style="text-align: right;"><%= partida.unidad %></td>
        <td style="text-align: right;"><%= number_with_precision partida.cantidad.to_f, :precision => 2 %></td>
        <td style="text-align: right;"><%= number_with_precision partida.precio_unitario.to_f, :precision => 2 %></td>
        <td style="text-align: right;"><%= number_with_precision partida.parcial.to_f, :precision => 2 %></td>
      </tr>
      <% sumariza_parcial += partida.parcial.to_f %>
    <% end %>
    <tr class="well">
      <td></td>
      <td colspan="4"><b>Total</b></td>
      <td style="text-align: right;"><b><%= number_to_currency sumariza_parcial, unit: 'S/. ' %></b></td>
    </tr>
  </table>
</div>
<% end %>
