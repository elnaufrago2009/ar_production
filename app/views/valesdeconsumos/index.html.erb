<div class="row">
  <div class="span7">
    <h2>Vales de Consumo</h2>  
  </div>
  <div class="span5">  
    <br>  
    <%= link_to raw('Nuevo <i class="icon-plus icon-white"></i>'), new_valesdeconsumo_path, :class => "btn btn-primary pull-right" %>
  </div>
</div>
<br>


<div class="row">
  <div class="span5">
    <!-- Search-->
    <%= form_tag "/valesdeconsumos", :method => 'get', :class => "form-search pull-left" do %>
      <div class="input-append">    
        <%= text_field_tag :search, params[:search], :class => "span3 search-query", :placeholder => "Buscar Numero de Vale" %>
        <%= submit_tag "Buscar", :class => "btn" %>
      </div>
    <% end %> 
    <!-- End Search -->       
  </div>
  <div class="span7">
    <!-- Paginacion-->
    <div class="pull-right">
      <%= will_paginate @valesdeconsumos, renderer: BootstrapPagination::Rails %>  
    </div>    
    <!-- End Paginacion --> 
  </div>
</div><!-- End Row -->





<table class="table table-bordered table-striped table-condensed table-hover table-hover">
  <tr>
    <th>#id</th>
    <th>Numero vale</th>
    <th>Tipo vale</th>
    <th>Frente</th>
    <th>Proveedor</th>
    <th>Tipo material</th>
    <th>Cantidad</th>
    <th>Fecha</th>
    <th>Acciones</th>
  </tr>

<% @valesdeconsumos.each do |valesdeconsumo| %>
  <tr style="font-size:12px;">
    <td><%= valesdeconsumo.id %></td>
    <td><%= valesdeconsumo.numero_vale %></td>
    <td><%= valesdeconsumo.tipo_vale %></td>
    <td><%= valesdeconsumo.frente.nombre %></td>
    <td>
      <%= valesdeconsumo.proveedore.ente.nombre %>
      <%= valesdeconsumo.proveedore.ente.apellido %>
      <%= valesdeconsumo.proveedore.ente.razon_social %>
    </td>
    <td><%= valesdeconsumo.tipo_material %></td>
    <td><%= valesdeconsumo.cantidad %></td>
    <td><%= valesdeconsumo.created_at.strftime("%d %b. %Y") %></td>
    <td>
        <%= link_to raw('<i class="icon-eye-open  icon-white"></i>'), valesdeconsumo, :class => "btn btn-small btn-info" %>
        <%= link_to raw('<i class="icon-edit icon-white"></i>'), edit_valesdeconsumo_path(valesdeconsumo), :class => "btn btn-small btn-success" %>
        <%= link_to raw('<i class="icon-trash icon-white"></i>'), valesdeconsumo, method: :delete, data: { confirm: 'Esta seguro que desea eliminar?' }, :class => "btn btn-small btn-danger" %>
    </td>
  </tr>
<% end %>
</table>
<div class="pull-left">
  <%= will_paginate @valesdeconsumos, renderer: BootstrapPagination::Rails %>  
</div>

<div class="clearfix"></div>
