<div class="row">
  <div class="span6">
    <h1>Jefes de Frentes</h1>    
  </div>
  <div class="span6">
    <br>
    <%= link_to raw('Nuevo <i class="icon-plus icon-white"></i>'), new_jefedefrente_path, :class => "btn btn-primary pull-right" %>
  </div>
</div>
<br>


<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>#id</th>
    <th>Nombre</th>    
    <th>Movil</th>
    <th>Mail</th>
    <th>Fecha Creado</th>
    <th>Acciones</th>
  </tr>

<% @jefedefrentes.each do |jefedefrente| %>
  <tr>
    <td><%= jefedefrente.id %></td>
    <td>
      <%= jefedefrente.ente.nombre %>
      <%= jefedefrente.ente.apellido %>
      <%= jefedefrente.ente.razon_social %>
    </td>    
    <td><%= jefedefrente.movil_1 %></td>
    <td><%= jefedefrente.mail %></td>
    <td><%= jefedefrente.created_at.strftime("%d %b. %Y") %></td>
    <td>
      <%= link_to raw('<i class="icon-eye-open icon-white"></i>'), jefedefrente, :class => "btn btn-small btn-info" %>
      <%= link_to raw('<i class="icon-edit icon-white"></i>'), edit_jefedefrente_path(jefedefrente), :class => "btn btn-small btn-success" %>
      <%= link_to raw('<i class="icon-trash icon-white"></i>'), jefedefrente, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small btn-danger" %>
    </td>
  </tr>
<% end %>
</table>

