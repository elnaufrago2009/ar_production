<%= form_for(@frente, :html => {:class => "form-horizontal"}) do |f| %>

  <% if @frente.errors.any? %>
    <div id="error_explanation" class="well">
      <h2><%= pluralize(@frente.errors.count, "errores") %> cometidos</h2>

      <ul>
      <% @frente.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Control Group 
    ==============================================================================  -->
    <div class="control-group">
      <div class="control-label">
        <%= f.label :nombre %>
      </div>
      <div class="controls">
        <%= f.text_field :nombre %>
      </div>
    </div>
  <!-- Control Group 
    ==============================================================================  -->
    <div class="control-group">
      <div class="control-label">
        <%= f.label :descripcion %>
      </div>
      <div class="controls">
        <%= f.text_field :descripcion %>
      </div>
    </div>
  <!-- Control Group 
    ==============================================================================  -->
    <div class="control-group">
      <div class="controls">
        <%= f.submit :class => "btn btn-success" %>
      </div>
    </div>
<% end %>
