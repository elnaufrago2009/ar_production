<div class="page-header">
  <h2>Tipos de Combustible</h2>
</div>

<div class="row">
<table class="table table-striped table-condensed table-bordered span6">
  <tr>
    <th>#id</th>
    <th>Tipo</th>
    <th>Combustible</th>
    <th>Precio</th>
    <th>Acciones</th>
  </tr>

<% @combustibletipos.each do |combustibletipo| %>
  <tr>
    <td><%= combustibletipo.id %></td>
    <td><%= combustibletipo.tipo %></td>
    <td><%= combustibletipo.combustible %></td>
    <td><%= combustibletipo.precio %></td>
    <td>
      <%= link_to raw("<i class='icon-eye-open icon-white'></i>"), combustibletipo, class: 'btn btn-small btn-info' %>
      <%= link_to raw("<i class='icon-edit icon-white'></i>"), edit_combustibletipo_path(combustibletipo), class: 'btn btn-small btn-success' %>
      <%= link_to raw("<i class='icon-trash icon-white'></i>"), combustibletipo, method: :delete, data: { confirm: 'Esta Seguro que desea Eliminar ?' }, class: 'btn btn-small btn-danger' %>
    </td>
  </tr>
<% end %>
</table>
</div>

<div class="form-actions">
  <%= link_to raw("<i class='icon-user icon-white'></i> nuevo"), new_combustibletipo_path, class: 'btn btn-primary' %>
</div>
